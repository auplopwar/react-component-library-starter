{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "babel",
    "import",
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },
  "rules": {
    "react/prefer-stateless-function": ["warn"],
    "arrow-body-style": ["warn"],
    "react/jsx-closing-bracket-location": ["warn"],
    "react/prop-types": ["warn"],
    "no-param-reassign": ["warn"],
    "no-else-return": ["warn"],
    "max-len": [2,150, 4]

  }
}